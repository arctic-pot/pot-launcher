{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "assets/*": ["./assets/*"],
      "base/*": ["./src/base/*"],
      "ui/*": ["./src/ui/*"],
      "typings/*": ["./src/typings/*"],
      "utils/*": ["./src/utils/*"]
    },
    "types": ["react-router-dom"]
  },
  "include": ["src/**/*"]
}
