{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "assets": ["./assets/*"],
      "components": ["./src/components/*"],
    },
    "types": [
      "react-router-dom"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
